<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_helpdesk_ticket" model="ir.sequence">
            <field name="name">Ticket Number</field>
            <field name="code">helpdesk.ticket</field>
            <field name="prefix">TKT-</field>
            <field name="padding">10</field>
        </record>

        <record id="ticket_stage_type_to_do" model="helpdesk.ticket.stage.type">
            <field name="name">To Do</field>
            <field name="code">to_do</field>
            <field name="bg_color">rgba(192, 192, 192, 1)</field>
        </record>
        <record id="ticket_stage_type_in_progress" model="helpdesk.ticket.stage.type">
            <field name="name">In Progress</field>
            <field name="code">in_progress</field>
            <field name="bg_color">rgba(0, 128, 255, 1)</field>
        </record>
        <record id="ticket_stage_type_done" model="helpdesk.ticket.stage.type">
            <field name="name">Done</field>
            <field name="code">done</field>
            <field name="bg_color">rgba(68, 170, 85, 1)</field>
        </record>
    </data>
</odoo>
