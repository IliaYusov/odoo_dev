<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="DocumentFlowDashboard">
        <div class="document_flow_dashboards">
            <div class="container-fluid document_flow_dashboard_main"/>
        </div>
    </t>

    <t t-name="UserDashboard">
        <link rel="stylesheet" href="/document_flow/static/src/css/dashboard.css"/>
        <div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
            <div class="col my_tasks">
                <div class="card">
                    <div class="card-header justify-content-center align-items-center">
                        <h2 class="card-title">My tasks: <small id="my_tasks_count"/></h2>
                    </div>
                    <div class="card-body">
                        <div class="row row-cols-2">
                            <div class="col-md-6">
                                <div class="card my_to_do_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-inbox"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-info">
                                                <span class="tasks-title">New</span>
                                                <br/>
                                                <span class="tasks-count" id="my_to_do_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card my_overdue_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-fire"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-danger">
                                                <span class="tasks-title">Overdue</span>
                                                <br/>
                                                <span class="tasks-count" id="my_overdue_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col by_me_tasks">
                <div class="card">
                    <div class="card-header justify-content-center align-items-center">
                        <h2 class="card-title">Created by me: <small id="by_me_tasks_count"/></h2>
                    </div>
                    <div class="card-body">
                        <div class="row row-cols-2">
                            <div class="col-md-6">
                                <div class="card by_me_to_do_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-inbox"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-info">
                                                <span class="tasks-title">New</span>
                                                <br/>
                                                <span class="tasks-count" id="by_me_to_do_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card by_me_overdue_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-fire"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-danger">
                                                <span class="tasks-title">Overdue</span>
                                                <br/>
                                                <span class="tasks-count" id="by_me_overdue_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col group_tasks">
                <div class="card">
                    <div class="card-header justify-content-center align-items-center">
                        <h2 class="card-title">Group tasks: <small id="group_tasks_count"/></h2>
                    </div>
                    <div class="card-body">
                        <div class="row row-cols-2">
                            <div class="col-md-6">
                                <div class="card group_to_do_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-inbox"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-info">
                                                <span class="tasks-title">New</span>
                                                <br/>
                                                <span class="tasks-count" id="group_to_do_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card group_overdue_tasks">
                                    <div class="row justify-content-center align-items-center g-0">
                                        <div class="col-4">
                                            <div class="card-icon">
                                                <i class="fa fa-fire"/>
                                            </div>
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body text-danger">
                                                <span class="tasks-title">Overdue</span>
                                                <br/>
                                                <span class="tasks-count" id="group_overdue_count"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <t t-if="widget.has_subordinates">
                <div class="col subordinates_tasks">
                    <div class="card">
                        <div class="card-header justify-content-center align-items-center">
                            <h2 class="card-title">Tasks of subordinates: <small id="subordinates_tasks_count"/></h2>
                        </div>
                        <div class="card-body">
                            <div class="row row-cols-2">
                                <div class="col-md-6">
                                    <div class="card subordinates_to_do_tasks">
                                        <div class="row justify-content-center align-items-center g-0">
                                            <div class="col-4">
                                                <div class="card-icon">
                                                    <i class="fa fa-inbox"/>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body text-info">
                                                    <span class="tasks-title">New</span>
                                                    <br/>
                                                    <span class="tasks-count" id="subordinates_to_do_count"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card subordinates_overdue_tasks">
                                        <div class="row justify-content-center align-items-center g-0">
                                            <div class="col-4">
                                                <div class="card-icon">
                                                    <i class="fa fa-fire"/>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body text-danger">
                                                    <span class="tasks-title">Overdue</span>
                                                    <br/>
                                                    <span class="tasks-count" id="subordinates_overdue_count"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>
