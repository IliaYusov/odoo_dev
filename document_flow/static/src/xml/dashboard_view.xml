<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="DocumentFlowDashboard">
        <div class="document_flow_dashboards">
            <div class="container-fluid document_flow_dashboard_main"/>
        </div>
    </t>

    <t t-name="DashBoardDocumentFlow">
        <link rel="stylesheet" href="/document_flow/static/src/css/dashboard.css"/>
        <div class="row main-section mt-5">
            <div class="col-sm-6 col-md-3-12 col-md-6 col-lg-3 df my_tasks">
                <div class="card card_my_tasks">
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h2 class="card-title">My Tasks: <small id="my_tasks_count"/></h2>
                        </div>
                        <div class="card-body">
                            <div class="row tasks-section mt-1">
                                <div class="col-sm-6 col-lg-6 df my_to_do_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="my_to_do_count"/>
                                            <div class="stat-text">New</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6 df my_overdue_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="my_overdue_count"/>
                                            <div class="stat-text">Overdue</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-3-12 col-md-6 col-lg-3 df by_me_tasks">
                <div class="card card_by_me_tasks">
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h2 class="card-title">Created By Me: <small id="by_me_tasks_count"/></h2>
                        </div>
                        <div class="card-body">
                            <div class="row tasks-section mt-1">
                                <div class="col-sm-6 col-lg-6 df by_me_to_do_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="by_me_to_do_count"/>
                                            <div class="stat-text">New</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6 df by_me_overdue_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="by_me_overdue_count"/>
                                            <div class="stat-text">Overdue</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-3-12 col-md-6 col-lg-3 df my_group_tasks">
                <div class="card card_group_tasks">
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h2 class="card-title">Group Tasks: <small id="group_tasks_count"/></h2>
                        </div>
                        <div class="card-body">
                            <div class="row tasks-section mt-1">
                                <div class="col-sm-6 col-lg-6 df group_to_do_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="group_to_do_count"/>
                                            <div class="stat-text">New</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6 df group_overdue_tasks">
                                    <div class="stat-widget-one">
                                        <div class="stat-content">
                                            <div class="stat-digit" id="group_overdue_count"/>
                                            <div class="stat-text">Overdue</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
