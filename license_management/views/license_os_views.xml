<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="license_os_view_tree" model="ir.ui.view">
        <field name="name">license.os.tree</field>
        <field name="model">license.os</field>
        <field name="arch" type="xml">
            <tree string="Operating Systems" editable="bottom" duplicate="false">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_license_operating_systems" model="ir.actions.act_window">
        <field name="name">Operating Systems</field>
        <field name="res_model">license.os</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
