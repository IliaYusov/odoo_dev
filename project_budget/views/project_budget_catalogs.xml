<!-- legal_entity_signing -->
        <record id="show_legal_entity_signing_tree" model="ir.ui.view">
            <field name="name">project_budget.legal_entity_signing.tree</field>
            <field name="model">project_budget.legal_entity_signing</field>
            <field name="arch" type="xml">
                <tree string="legal_entity_signing">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="percent_fot"/>
                    <field name="descr"/>
                    <field name="is_percent_fot_manual" widget="boolean_toggle"/>
                    <field name="different_project_offices_in_steps" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="show_legal_entity_signing_form" model="ir.ui.view">
            <field name="name">project_budget.legal_entity_signing.form</field>
            <field name="model">project_budget.legal_entity_signing</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="legal_entity_signing">
                        <group>
                                <field name="name"/>
                                <field name="code"/>
                        </group>
                        <group>
                            <field name="is_percent_fot_manual" widget="boolean_toggle"/>
                            <field name="percent_fot" placeholder="enter FOT percent. e.g. 25"
                                   attrs="{'invisible': [('is_percent_fot_manual', '=', True)]}"
                            />
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="different_project_offices_in_steps" widget="boolean_toggle"/>
                            />
                        </group>
                        <group>
                            <field name="descr" widget="html"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="show_legal_entity_signing" model="ir.actions.act_window">
            <field name="name">legal_entity_signing</field>
            <field name="type">ir.actions.act_window</field>
