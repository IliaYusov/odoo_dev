<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_reseller_view_search" model="ir.ui.view">
        <field name="name">res.company.reseller.view.search</field>
        <field name="model">res.company.reseller</field>
        <field name="arch" type="xml">
            <search string="Search Company Reseller">
                <field name="partner_id" string="Partner" filter_domain="[('partner_id.name', 'ilike', self)]"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="res_company_reseller_view_tree" model="ir.ui.view">
        <field name="name">res.company.reseller.tree</field>
        <field name="model">res.company.reseller</field>
        <field name="arch" type="xml">
            <tree string="Company Resellers">
                <field name="partner_id" widget="many2one_avatar"/>
                <field name="partner_grade_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="res_company_reseller_view_form" model="ir.ui.view">
        <field name="name">res.company.reseller.form</field>
        <field name="model">res.company.reseller</field>
        <field name="arch" type="xml">
            <form string="Company Reseller">
                <sheet string="Reseller">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_open_project"
                                icon="fa-star">
                            <field string="Partner Projects" name="project_count" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group col="2">
                        <group>
                            <field name="partner_id" widget="many2one_avatar" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="partner_grade_id" options="{'no_create_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="company_id" groups="!base.group_multi_company" invisible="1"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_company_reseller_view_kanban" model="ir.ui.view">
        <field name="name">res.company.reseller.kanban</field>
        <field name="model">res.company.reseller</field>
        <field name="arch" type="xml">
            <kanban class="o_res_company_reseller_kanban" sample="1">
                <field name="id"/>
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="partner_grade_id"/>
                <field name="company_id"/>
                <field name="active"/>
                <field name="project_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_company_reseller_kanban">
                            <div class="o_kanban_image_fill_left o_kanban_image_full"
                                 t-attf-style="background-image: url(#{kanban_image('res.partner', 'avatar_128', record.partner_id.raw_value)})"
                                 role="img"/>
                            <div class="ribbon ribbon-top-right" attrs="{'invisible': [('active', '=', True)]}">
                                <span class="bg-danger">Archived</span>
                            </div>
                            <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong class="o_kanban_record_title oe_reseller_heading">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary" groups="base.group_multi_company">
                                        <small>
                                            <i class="fa fa-building-o" role="img" aria-label="Company"
                                               title="Company"/>
                                            <field name="company_id"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <a t-if="record.project_count.value>0" href="#" data-type="object"
                                           data-name="action_open_project"
                                           class="oe_kanban_action oe_kanban_action_a me-1">
                                            <span class="badge rounded-pill">
                                                <i class="fa fa-fw fa-star" aria-label="Partner Projects"
                                                   role="img" title="Partner Projects"/>
                                                <t t-out="record.project_count.value"/>
                                            </span>
                                        </a>
                                    </div>
                                    <div class="oe_kanban_bottom_right"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_res_company_resellers" model="ir.actions.act_window">
        <field name="name">Company Resellers</field>
        <field name="res_model">res.company.reseller</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="res_company_reseller_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Company Reseller.
            </p>
        </field>
    </record>
</odoo>
