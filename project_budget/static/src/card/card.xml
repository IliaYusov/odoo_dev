<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="project_budget.Card" owl="1">
        <div class="card" style="width: 30rem; height: fit-content" t-att-class="props.className">
            <div class="card-body">
                <t t-if="props.slots.title"> 
                    <h5 class="card-title"><t t-slot="title"/></h5>
                </t>
                <div class="card-text"><t t-slot="default"/></div>
                <t t-if="props.slots.legend">
                    <div class="card-legend"><t t-slot="legend"/></div>
                </t>
            </div>
        </div>
    </t>
</templates>