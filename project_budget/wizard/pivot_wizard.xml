<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_budget_pivot_wizard_pivot" model="ir.ui.view">
        <field name="name">Pivot Wizard Tree</field>
        <field name="model">project_budget.pivot_wizard</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="company_id" type="row"/>
                <field name="project_office_id" type="row"/>
                <field name="name" type="row"/>
                <field name="end_presale_project_month" type="col"/>
                <field name="total_amount_of_revenue" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="action_pivot_wizard_pivot" model="ir.actions.act_window">
        <field name="name">Pivot wizard</field>
        <field name="res_model">project_budget.pivot_wizard</field>
        <field name="view_mode">pivot</field>
        <field name="target">new</field>
    </record>
</odoo>
