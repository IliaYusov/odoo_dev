<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_budget_projects_report_print_form" model="ir.ui.view">
        <field name="name">project_budget.projects.report.wizard.form</field>
        <field name="model">project_budget.projects.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col ="4">
                        <group>
                            <field name="type_report"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="use_koeff_reserve" attrs="{'invisible': [('type_report', 'not in', ('forecast', 'management_committee'))]}"/>
                            <field name="pds_accept" attrs="{'invisible': [('type_report', 'not in', ('pds_acceptance_by_date'))]}"/>
                        </group>
                        <group>
                            <field name="koeff_reserve" attrs="{'invisible': ['|',('type_report', 'not in', ('forecast', 'management_committee')),('use_koeff_reserve','=',False)]}"/>
                            <field name="koeff_potential" attrs="{'invisible': ['|',('type_report', '!=', 'management_committee'),('use_koeff_reserve','=',False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="commercial_budget_id"/>
                    </group>
                    <group col = "4" string="report period">
                        <group>
                            <field string="year from" name="year" attrs="{'invisible': [('type_report', 'in', ('raw_data','overdue','pds_acceptance_by_date'))]}"/>
                            <field string="from date" name="date_start" attrs="{'invisible': [('type_report', 'not in', ('pds_acceptance_by_date'))]}"/>
                        </group>
                        <group>
                            <field string="year to" name="year_end" attrs="{'invisible': [('type_report', 'in', ('raw_data','overdue','management_committee','pds_acceptance_by_date'))]}"/>
                            <field string="to date" name="date_end" attrs="{'invisible': [('type_report', 'not in', ('pds_acceptance_by_date'))]}"/>
                        </group>
                        <group></group>
                        <group></group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" name="action_print_report" class="btn-success" type="object"/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_projects_print_report" model="ir.actions.act_window">
        <field name="name">Projects report</field>
        <field name="res_model">project_budget.projects.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

