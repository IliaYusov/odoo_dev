<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="presale_menu" parent="project_budget.project_budget_budgets" sequence="10" name="Presales"
              action="action_project_budget_presale_all_presales"/>

    <record id="action_project_budget_open_presales" model="ir.actions.act_window">
        <field name="name">Presales</field>
        <field name="res_model">project_budget.presale</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="context">{'default_project_id': active_id}</field>
    </record>

    <record id="project_budget_presale_view_inherit_form" model="ir.ui.view">
        <field name="name">project.budget.presale.inherit</field>
        <field name="model">project_budget.projects</field>
        <field name="inherit_id" ref="project_budget.show_comercial_budget_spec_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" name="%(action_project_budget_open_presales)d"
                        icon="fa-usd">
                    <field string="Presales" name="presale_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
