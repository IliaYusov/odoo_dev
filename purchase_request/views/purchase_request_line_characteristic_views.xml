<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_request_line_characteristic_view_tree" model="ir.ui.view">
        <field name="name">purchase.request.line.characteristic.tree</field>
        <field name="model">purchase.request.line.characteristic</field>
        <field name="arch" type="xml">
            <tree string="Purchase Request Line Characteristics" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="request_line_id" invisible="1"/>
                <field name="request_line_estimation_id" invisible="1"/>
                <field name="characteristic_id"/>
                <field name="characteristic_uom_id"/>
                <field name="characteristic_value"/>
            </tree>
        </field>
    </record>
</odoo>
