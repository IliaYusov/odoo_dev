<odoo>
    <data>

        <record id="action_view_all_tags" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">knowledge_base.tags</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tags found. Let's create one!
                </p>
            </field>
        </record>

        <record id="tags_form" model="ir.ui.view">
            <field name="name">knowledge_base.tags.form</field>
            <field name="model">knowledge_base.tags</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Tag">
                        <h4>
                            <group>
                                <field name="name" placeholder="Name of your tag"/>
                            </group>
                        </h4>
                        <group>
                                <field name="description" placeholder="Description of your tag"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tags_tree" model="ir.ui.view">
            <field name="name">knowledge_base.tags.tree</field>
            <field name="model">knowledge_base.tags</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>