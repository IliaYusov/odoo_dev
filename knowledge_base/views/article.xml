        <record id="article_form" model="ir.ui.view">
            <field name="name">knowledge_base.article.form</field>
            <field name="model">knowledge_base.article</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Article">
                        <h3>
                            <group>
                                <field name="name" placeholder="Name of your article"/>
                            </group>
                        </h3>
                        <h4>
                            <group col="3">
                                <group>
                                    <field name="section" placeholder="Section of your article"/>
                                </group>
                                <group>
                                    <field name="parent_article" placeholder="parent article"/>
                                </group>
                                <group>
                                    <field name="tags" placeholder="Article tags" widget="many2many_tags"/>
                                </group>
                            </group>
                        </h4>
                            <field name="article_has_childs" invisible="1"/>
                            <group col="1" attrs="{'invisible': [('article_has_childs', '=', False)]}">
                                <group>
                                    <field name="child_articles" mode="tree" widget="many2many">
                                        <tree>
                                            <field name="name" nolabel="1" string="Child articles"/>
                                        </tree>
                                    </field>
                                </group>
                            </group>
                        <field name="text" placeholder="Text of your article" widget="html"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="article_tree" model="ir.ui.view">
            <field name="name">knowledge_base.article.tree</field>
            <field name="model">knowledge_base.article</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="parent_article"/>
                    <field name="create_uid" widget="many2one_avatar"/>
                    <field name="section"/>
                    <field name="tags" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

