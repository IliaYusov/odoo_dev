<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_contract_type_form" model="ir.actions.act_window">
        <field name="name">Contract Types</field>
        <field name="res_model">contract.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"active_test": True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No contract types found. Let's create one!
            </p>
        </field>
    </record>

    <record id="contract_type_view_tree" model="ir.ui.view">
        <field name="name">contract.type.tree</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <tree string="Contract Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="contract_type_view_form" model="ir.ui.view">
        <field name="name">contract.type.form</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <form string="Contract Type">
                <sheet string="Contract Type">
                    <group invisible="1">
                        <field name="active"/>
                    </group>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" class="o_text_overflow" placeholder="Contract Type Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
